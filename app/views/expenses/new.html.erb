<div class="form-container">
  <h2>Add a new transaction</h2>

  <%= form_with(model: @expense, local: true) do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, required: true %>
    </div>

    <div class="field">
      <%= form.label :amount %>
      <%= form.number_field :amount, required: true %>
    </div>

    <div class="field">
      <%= form.label :group_id, 'Select Group' %>
      <%= form.collection_select :group_ids, current_user.groups.order(:name), :id, :name, prompt: 'Select a group', required: true %>
    </div>

    <div class="actions">
      <%= form.submit "Create Transaction" %>
    </div>
  <% end %>

  <div class="links">
    <%= link_to "Back to Categories", groups_path %>
  </div>
</div>
