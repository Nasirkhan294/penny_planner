<div class="category-wrapper">
  <h4>Transaction</h4>
  <div class="total-amount">
    <p>Total Amount:</p>
    <p>$<%= number_with_precision(@group.total_amount, precision: 2) %></p>
  </div>

  <div class="img-wrapper">
    <%= image_tag @group.image %>
    <p class="caption"><%= @group.name %></p>
  </div>
</div>

<div class="transactions">
  <%= render 'expenses/index', locals: {expenses: @expenses} %>
</div>

<div class="btn-wrapper">
  <%= link_to 'Add a new transaction', new_expense_path, class: "btn btn-transaction" %>
  <%= link_to "Back to Categories", groups_path, class: "btn category" %>
</div>