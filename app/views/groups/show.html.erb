<div class="container">
<p style="color: green"><%= notice %></p>
<div class="total-amount">
  <p>Total amount:</p> <p>$<%= @group.bills.inject(0){ |sum, bill| sum + bill.amount.to_i } %></p>
</div>
<div class="group-card-show">
  <div class="group-image-show">
    <img src="<%= @group.icon %>" alt="<%= @group.name %>" />
  </div>
  <div class="group-info">
    <p class="group-name"><%= @group.name %></p>
  </div>
</div>
<div class="buttons row">
  <% if can? :update, @group %>
    <%= link_to "Edit", edit_group_path(@group), class: 'btn' %>
  <% end %>
  <%= link_to "Back to groups", groups_path, class: 'btn' %>
  <% if can? :destroy, @group %>
    <%= button_to "Remove", @group, method: :delete, class: 'btn' %>
  <% end %>
</div>
<%= render 'bill', bills: @group.bills %>
<div class="category">
  <%= link_to "Add a New bill", new_group_bill_path(@group.id), class: "btn category-btn" %>
</div>
</div>