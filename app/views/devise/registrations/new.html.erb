<div class="form-container">
<% @title = 'Sign up' %>

<h2 class="heading">Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'signup-form' }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Enter name' %>
  </div>
  <div class="field">
    <%= f.text_field :bio, autofocus: true, autocomplete: "bio", placeholder: 'Add your interest' %>
  </div>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Enter email' %>
  </div>
  <div class="field">
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Enter password' %>
  </div>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Password confirmation' %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
<div class="links">
  <%= render "devise/shared/links" %>
</div>
</div>